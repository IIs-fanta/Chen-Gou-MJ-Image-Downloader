{
  "manifest_version": 3,
  "name": "陈狗MJ图片下载器",
  "version": "1.0",
  "description": "该插件为 Discord 网页版中的 Midjourney 图片添加下载和复制链接功能，方便用户快速获取图片资源。",
  "author": "陈狗",
  "icons": {
    "16": "icons/logo.ico",
    "48": "icons/logo.ico",
    "128": "icons/logo.ico"
  },
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://discord.com/*",
    "https://cdn.discordapp.com/*",
    "https://media.discordapp.net/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/logo.ico"],
      "matches": ["https://discord.com/*"]
    }
  ]
}